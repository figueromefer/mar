<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="mar.Perfil"
             xmlns:local="clr-namespace:mar.Controls">

    <ContentPage.Content>
        <ScrollView>
            <AbsoluteLayout BackgroundColor="#FFF">
                <Image Source="fondoa.png" Aspect="AspectFill" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" />
                <StackLayout HorizontalOptions="FillAndExpand" Margin="40, 50, 40, 50" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                    <Image Source="userperfil"/>

                    <Label Text="Nombre y apellido" Font="Bold, 18" TextColor="#FFF"></Label>
                    <Frame BorderColor="#FFF" CornerRadius="5" Padding="5, 3, 5, 3" VerticalOptions="Center" BackgroundColor="#FFF">
                        <local:ImageEntry x:Name="txtNombre" ImageHeight="10" ImageWidth="10" ImageAlignment="Right"
                 TextColor="Black" PlaceholderColor="#ccc" Image="backspace" 
                 Placeholder="Nombre y apellido" HorizontalOptions="FillAndExpand"/>
                    </Frame>

                    <Label Text="E-mail" Font="Bold, 18" TextColor="#FFF" Margin="0, 15, 0, 0"></Label>
                    <Frame BorderColor="#FFF" CornerRadius="5" Padding="3, 5, 3, 5" VerticalOptions="Center" BackgroundColor="#FFF">
                        <local:ImageEntry x:Name="txtMail" ImageHeight="10" ImageWidth="11" TextColor="Black" Keyboard="Email" PlaceholderColor="#ccc" Image="mail" 
                     Placeholder="E-mail" WidthRequest="30" HorizontalOptions="FillAndExpand"/>
                    </Frame>

                    <Label Text="Célular" Font="Bold, 18" TextColor="#FFF" Margin="0, 15, 0, 0"></Label>
                    <Frame BorderColor="#FFF" CornerRadius="5" Padding="5, 5, 5, 0" VerticalOptions="Center" BackgroundColor="#FFF">
                        <local:ImageEntry x:Name="txtCelular" ImageHeight="11" HeightRequest="45" ImageWidth="12" TextColor="Black" Keyboard="Telephone" PlaceholderColor="#ccc" Image="phonelada" 
                Placeholder="Número de celular"  HorizontalOptions="FillAndExpand" Margin="0, 0, 0, 10"/>
                    </Frame>

                    <Label Text="Fecha de nacimiento" Font="Bold, 18" TextColor="#FFF" Margin="0, 15, 0, 0"></Label>
                    <Frame BorderColor="#FFF" CornerRadius="5" Padding="5, 5, 5, 5" VerticalOptions="Center" BackgroundColor="#FFF">
                        <DatePicker BackgroundColor="#FFF" HeightRequest="45"></DatePicker>
                    </Frame>

                    <Label Text="Género" Font="Bold, 20" TextColor="#FFF" Margin="0, 15, 0, 0"></Label>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="lblHombre" Text="Hombre" TextColor="#FFF" VerticalOptions="Center" Font="Normal, 18" Grid.Column="3">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_2"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <CheckBox x:Name="cbxHombre" Color="#FFF" ScaleX="1" ScaleY="1" Grid.Column="2" CheckedChanged="CheckBox_CheckedChanged"></CheckBox>

                        <Label x:Name="lblMujer" Text="Mujer" TextColor="#FFF" VerticalOptions="Center" Font="Normal, 18" Grid.Column="1">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1"/>
                            </Label.GestureRecognizers>
                        </Label>
                        <CheckBox x:Name="cbxMujer" Color="#FFF" ScaleX="1" ScaleY="1" CheckedChanged="CheckBox_CheckedChanged"></CheckBox>
                    </Grid>

                    <StackLayout HorizontalOptions="Fill" Margin="0, 40, 0, 0">
                        <StackLayout VerticalOptions="Center">
                            <Button x:Name="btnSave" Text="Guardar" BackgroundColor="#CF7667" TextColor="#FFF"></Button>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </AbsoluteLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>