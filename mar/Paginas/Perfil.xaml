<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="mar.Perfil"
             xmlns:local="clr-namespace:mar.Controls">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="check" Text="Search" />
        <ToolbarItem Icon="check" Text="Search" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#FFF">
                <Grid HeightRequest="240">
                    <Image Source="fondoa.png" HorizontalOptions="Fill" Aspect="AspectFill"></Image>
                    <BoxView Grid.Column="0" Grid.Row="1" Color="#FFF" HeightRequest="1" HorizontalOptions="FillAndExpand"></BoxView>
                    <Frame Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" BackgroundColor="#FFF" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="180" HeightRequest="180" CornerRadius="180" Margin="0,5,0,10" HasShadow="True">
                        <Image Source="userperfil"></Image>
                    </Frame>
                </Grid>
                

                <StackLayout Margin="40, -20, 40, 20" Padding="0" VerticalOptions="FillAndExpand" Spacing="0">
                    <Label Text="" Font="Bold, 18" HorizontalTextAlignment="Center" TextColor="#3D454C" HorizontalOptions="FillAndExpand"></Label>
                    <Label Text="Septiembre, 12 - 2002" Font="Bold, 18" HorizontalTextAlignment="Center" TextColor="#3D454C" HorizontalOptions="FillAndExpand"></Label>
                    <Label Text="Hombre" Font="Bold, 18" HorizontalTextAlignment="Center" TextColor="#3D454C" HorizontalOptions="FillAndExpand"></Label>

                    <StackLayout Spacing="15" Margin="0, 20, 0, 20">
                        <Label Text="Nombre" Font="Bold, 12" TextColor="#3D454C" HorizontalOptions="FillAndExpand"></Label>
                        <Frame BorderColor="#FFF" CornerRadius="5" IsClippedToBounds="true" Padding="5, 3, 5, 3" VerticalOptions="Start" BackgroundColor="#FFF" Margin="0,0,0,0">
                            <local:ImageEntry x:Name="txtNombre" Text="Mario Soto Moreno" TextColor="Black" FontSize="16" ImageWidth="10" ImageHeight="10" PlaceholderColor="#ccc" Image="secure" Placeholder="Contraseña" BackgroundColor="#FFF"
                        HorizontalOptions="FillAndExpand" />
                        </Frame>

                        <Label Text="Contraseña" Font="Bold, 12" TextColor="#3D454C" HorizontalOptions="FillAndExpand"></Label>
                        <Frame BorderColor="#FFF" CornerRadius="5" IsClippedToBounds="true" Padding="5, 3, 5, 3" VerticalOptions="Start" BackgroundColor="#FFF" Margin="0,0,0,0">
                            <local:ImageEntry x:Name="txtContrasena" TextColor="Black" IsPassword="True" FontSize="16" ImageWidth="10" ImageHeight="10" PlaceholderColor="#ccc" Image="secure" Placeholder="Contraseña" BackgroundColor="#FFF"
                        HorizontalOptions="FillAndExpand" />
                        </Frame>

                        <Label Text="Teléfono" Font="Bold, 12" TextColor="#3D454C" HorizontalOptions="FillAndExpand"></Label>
                        <Frame BorderColor="#FFF" CornerRadius="5" Padding="3, 5, 3, 5" VerticalOptions="Center" BackgroundColor="#FFF" Margin="0, 0, 0, 15">
                            <local:ImageEntry x:Name="txtCelular" ImageHeight="11" ImageWidth="12" TextColor="Black" Keyboard="Telephone" PlaceholderColor="#ccc" Image="phonelada" Placeholder="" BackgroundColor="#FFF" FontSize="18"
                        WidthRequest="30" HorizontalOptions="FillAndExpand" MaxLength="10" />
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
